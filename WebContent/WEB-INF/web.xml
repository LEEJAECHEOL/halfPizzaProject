<?xml version="1.0" encoding="UTF-8"?>

<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                       http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <filter>
        <filter-name>xssEscapeServletFilter</filter-name>
        <filter-class>com.navercorp.lucy.security.xss.servletfilter.XssEscapeServletFilter</filter-class>
    </filter>
    <filter>
		<filter-name>charsetFilter</filter-name>
		<filter-class>com.cos.halfPizza.filter.CharsetFilter</filter-class>
	</filter>
    <filter>
		<filter-name>imageUploadFilter</filter-name>
		<filter-class>com.cos.halfPizza.filter.ImageUploadFilter</filter-class>
	</filter>
    <filter>
		<filter-name>cartCountFilter</filter-name>
		<filter-class>com.cos.halfPizza.filter.CartCountFilter</filter-class>
	</filter>
    <filter>
		<filter-name>dispatcher</filter-name>
		<filter-class>com.cos.halfPizza.filter.Dispatcher</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>charsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
	
	 <filter-mapping>
        <filter-name>xssEscapeServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<filter-mapping>
		<filter-name>cartCountFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
   
	 <filter-mapping>
        <filter-name>imageUploadFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>dispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>